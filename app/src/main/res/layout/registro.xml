<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro"
    android:background="@color/mirage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="108dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingTop="60px">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:layout_weight="1"
                android:scrollbarSize="4dp"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="332dp"
            android:layout_height="67dp"
            android:layout_marginStart="80px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="80px"
            android:layout_marginRight="80px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="88dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="60px"
                android:text="LOGIN"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="386dp"
            android:layout_marginStart="80px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="60px"
            android:layout_marginEnd="80px"
            android:layout_marginRight="80px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:paddingLeft="60px"
                android:shadowColor="@color/gray_d"
                android:shadowRadius="10"
                android:text="@string/txt_usuario"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/etxt_usuario_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:background="@drawable/account_box"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="60px" />

            <TextView
                android:id="@+id/txt_contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:paddingLeft="60px"
                android:shadowColor="@color/gray_d"
                android:shadowRadius="10"
                android:text="@string/txt_contraseña"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/etxt_contraseña_congif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:background="@drawable/account_box"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="60px" />

            <Button
                android:id="@+id/btn_cambiar_creedenciales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100px"
                android:text="@string/btn_registro"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:backgroundTint="@color/orange" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>